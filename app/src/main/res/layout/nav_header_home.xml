<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_side_menu"
        android:layout_width="match_parent"
        android:layout_height="275dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfileMenu"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/cardio_workout_fat_loss_fitness"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/Tv_WelcomeAppMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewProfileMenu"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/welcome"
                android:textColor="#fffbfbfe"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Tv_SignIn_SignUpMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sign_in_sign_up"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/Tv_WelcomeAppMenu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fffbfbfe"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
